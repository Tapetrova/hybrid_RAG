# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD_LLM=your_redis_password
CELERY_BROKER_CONTENT_SCRAPER_DB=0
CELERY_BACKEND_CONTENT_SCRAPER_DB=1
REDIS_CACHE_DB=2
CACHE_TTL=900

# Scraper Settings
PLAYWRIGHT_TIMEOUT_MS=180000
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=60
SCRAPER_IGNORE_LINKS=true
SCRAPER_IGNORE_IMAGES=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8099
API_TITLE=Content Scraper API
API_DESCRIPTION=API for scraping and parsing web content
API_VERSION=1.0.0

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Serper API (Required)
SERPER_API_KEY=your_serper_api_key_here
SERPER_DEFAULT_NUM_RESULTS=10
SERPER_DEFAULT_COUNTRY=us
SERPER_DEFAULT_LANGUAGE=en
SERPER_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/content_scraper.log
LOG_FILE_ROTATION=midnight
LOG_FILE_RETENTION=7
LOG_JSON_ENABLED=false

# Feature Flags
ENABLE_CACHING=true
ENABLE_VERIFICATION=false
ENABLE_METRICS=false

# OpenAI (if using LangChain features)
OPENAI_API_KEY=your_openai_api_key_here